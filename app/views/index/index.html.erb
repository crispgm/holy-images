<% flash.each do |type, msg| %>
<div class="section">
  <div class="section-wrap <%= type %>">
    <div id="flash-message" class="section-title">
      <%= msg %>
    </div>
  </div>
</div>
<% end %>

<% unless logged_in? %>
  <div class="section">
    <div class="section-wrap hint">
      <div id="sign-up" class="section-title">
        <%= link_to "Sign Up", "/user/new" %> /
        <%= link_to "Sign In", "/user/sign-in" %>
      </div>
    </div>
  </div>
<% end %>

<% @images.each do |image| %>
  <%= render partial: "image/image", object: image %>
<% end %>

<div class="section">
  <div class="section-wrap info">
    <div class="section-item">
      <div class="section-title">
        Total Images: <%= @page[:total] %>,
        Current Page: <%= @page[:cur_page] %>,
        <% if @page[:cur_page] > 1 %>
          <%= link_to "Previous", controller: "index", action: "index", p: @page[:cur_page] - 1 %>
        <% else %>
           Previous
        <% end %>|
        <% if @page[:cur_page] < @page[:total_page] %>
          <%= link_to "Next", controller: "index", action: "index", p: @page[:cur_page] + 1 %>
        <% else %>
           Next
        <% end %>
      </div>
    </div>
  </div>
</div>