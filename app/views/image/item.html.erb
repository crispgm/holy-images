<%= render partial: "image/image", object: @image, locals: {nolink: true, style: :original} %>

<% if @likes.size > 0 %>
<div class="section">
  <div class="section-wrap">
    <div class="section-title">
      Like
    </div>
    <div class="section-content">
      <% @likes.each do |like| %>
      <div class="section-time">
        <%= like.updated_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
      <div>
        <%= like.user.name %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<div class="section">
  <div class="section-wrap info">
    <div class="section-title">
      <%= link_to "退回", controller: "index", action: "index" %>
    </div>
  </div>
</div>
